{
  "appId": "com.run.overlay",
  "productName": "RunnyVision",
  "files": [
    "**/*"
  ],
  "directories": {
    "buildResources": "build"
  },
  "extraResources": [
    "rv-app/public/**"
  ],
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerSidebar": "build/installerSplash.bmp",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
