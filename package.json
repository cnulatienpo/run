{
  "name": "run",
  "version": "1.0.0",
  "description": "Run The World overlay",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    // NOTE: HUD uses Python's http.server (no proxy). Renderer cannot forward /api to port 3001.
    "start:browser": "echo 'Starting HTTP server and opening in Simple Browser...' && cd renderer && python3 -m http.server 3000 &",
    "start:headless": "./dev/start-headless.sh",
    "start:gui": "./dev/start-gui.sh",
    "dev": "nodemon main.js",
    "build": "electron-builder",
    "dist": "electron-builder --win",
    "release:mac": "electron-builder --mac",
    "release:win": "electron-builder --win",
    "release:linux": "electron-builder --linux",
    "release:all": "electron-builder -mwl",
    "create-noodle": "node scripts/createAndUpload.js",
    "test": "vitest"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "_devServer": "Renderer dev server uses Python http.server (no proxy). Cannot forward /api to RV backend. No CORS by default.",
  "_devNotes": {
    "start:browser": "Serves renderer/ using Python http.server on port 3000. No proxy support."
  },
  "dependencies": {
    "@pixi/filter-glitch": "^5.0.5",
    "@pixi/filter-godray": "^5.0.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "archiver": "^6.0.1",
    "auto-launch": "^5.0.6",
    "backblaze-b2": "^1.7.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.2",
    "express": "^4.19.2",
    "googleapis": "^131.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "pixi.js": "^8.4.1",
    "winston": "^3.14.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.5",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.7",
    "@types/node": "^22.10.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "build": {
    "productName": "Run The World",
    "appId": "com.example.rtw",
    "artifactName": "RunTheWorld-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "index.js",
      "preload.js",
      "renderer/**/*",
      "effects/**/*",
      "step-bridge/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      "hallucinations/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
