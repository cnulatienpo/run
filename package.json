{
  "name": "runnyvision",
  "_devLimitation": "start:browser uses Python http.server â†’ no proxy, no CORS.",
  "version": "1.0.0",
  "description": "RunnyVision overlay",
  "main": "main.js",
  "scripts": {
    "dev": "node dev/hud-dev-server.js",
    "rv:watch": "tsc -p rv-app --watch",
    "rv:api": "ts-node src/server.ts",
    "passport:dev": "cd passport && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run rv:watch\" \"npm run rv:api\"",
    "build:rv": "tsc -p rv-app",
    "backend": "node start-backend.js api",
    "backend:legacy": "node start-backend.js legacy"
    ,
    "build": "npm run build:rv"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "_devServer": "Renderer dev server (dev/hud-dev-server.js) serves renderer/ and proxies /api to RV backend (default :3001).",
  "_devNotes": {
    "start:browser": "Serves renderer/ via Express with /api proxy to RV backend. Configure HUD_PORT/API_PORT/API_TARGET as needed."
  },
  "dependencies": {
    "@pixi/filter-glitch": "^5.0.5",
    "@pixi/filter-godray": "^5.0.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "archiver": "^6.0.1",
    "auto-launch": "^5.0.6",
    "backblaze-b2": "^1.7.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.2",
    "express": "^4.19.2",
    "googleapis": "^131.0.0",
    "http-proxy-middleware": "^3.0.3",
    "pixi.js": "^8.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "winston": "^3.14.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.5",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.12",
    "@vitejs/plugin-react": "^5.2.0",
    "vite": "^6.0.2"
  },
  "build": {
    "productName": "RunnyVision",
    "appId": "com.runnyvision.app",
    "artifactName": "RunnyVision-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "rv-app/public/**/*",
      "src/**/*",
      "passport/**/*",
      "assets/**/*",
      "step-bridge/**/*",
      "effects/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "renderer",
        "to": "renderer"
      },
      {
        "from": "rv-app/public",
        "to": "rv"
      },
      {
        "from": "passport",
        "to": "passport"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
