{
  "name": "run",
  "version": "1.0.0",
  "description": "Run The World overlay",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon main.js",
    "build": "electron-builder",
    "dist": "electron-builder --win",
    "release:mac": "electron-builder --mac",
    "release:win": "electron-builder --win",
    "release:linux": "electron-builder --linux",
    "release:all": "electron-builder -mwl"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@pixi/filter-glitch": "^5.0.5",
    "@pixi/filter-godray": "^5.0.5",
    "concurrently": "^8.2.2",
    "electron-launcher": "^1.0.0",
    "electron": "^28.3.3",
    "electron-log": "^5.1.2",
    "express": "^4.19.2",
    "pixi.js": "^8.4.1",
    "winston": "^3.14.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.7"
  },
  "build": {
    "productName": "Run The World",
    "appId": "com.example.rtw",
    "artifactName": "RunTheWorld-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "index.js",
      "preload.js",
      "renderer/**/*",
      "effects/**/*",
      "step-bridge/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      "hallucinations/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
