{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NoodleFile_v1",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "sessionId": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "userId": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "heartRate": {
          "type": "number"
        },
        "temperature": {
          "type": "number"
        },
        "steps": {
          "type": "integer"
        }
      },
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "format": "date-time"
          },
          "eventType": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": ["number", "string", "integer", "boolean", "null"]
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["time", "eventType"],
        "additionalProperties": true
      },
      "default": []
    },
    "synthetic": {
      "type": "boolean"
    },
    "notes": {
      "type": "string"
    },
    "privacy_ledger": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string" },
        "input_type": { "type": "string" },
        "synthetic_profile": { "type": ["string", "null"] },
        "biometrics_source": { "type": "string" },
        "movement_source": { "type": "string" },
        "sensitive_fields": {
          "type": "array",
          "items": { "type": "string" }
        },
        "export_approved": { "type": "boolean" }
      },
      "required": [
        "schema_version",
        "input_type",
        "synthetic_profile",
        "biometrics_source",
        "movement_source",
        "sensitive_fields",
        "export_approved"
      ],
      "additionalProperties": false
    },
    "training_labels": {
      "type": "object",
      "properties": {
        "mood": { "type": "string" },
        "intent": { "type": "string" },
        "motion_quality": { "type": "string" },
        "confidence_scores": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        }
      },
      "additionalProperties": false
    },
    "mutation_id": {
      "type": "string"
    }
  },
  "required": ["version", "sessionId", "timestamp", "data", "privacy_ledger"],
  "additionalProperties": false
}
