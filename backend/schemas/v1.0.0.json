{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Noodle Schema v1.0.0",
  "type": "object",
  "properties": {
    "version": {
      "type": ["integer", "string"],
      "enum": [1, "1"]
    },
    "sessionId": {
      "type": "string",
      "minLength": 1
    },
    "schema_version": {
      "type": "string",
      "const": "v1.0.0"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "userId": {
      "type": "string",
      "minLength": 1
    },
    "data": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "heartRate": {
          "type": "number",
          "minimum": 0
        },
        "temperature": {
          "type": "number"
        },
        "steps": {
          "type": ["integer", "number"],
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "format": "date-time"
          },
          "eventType": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": ["number", "string", "integer", "boolean", "null"]
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["time", "eventType"],
        "additionalProperties": true
      },
      "default": []
    },
    "event_notes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "t_ms": {
            "type": ["number", "integer"],
            "minimum": 0
          },
          "note": {
            "type": "string"
          }
        },
        "required": ["t_ms"],
        "additionalProperties": false
      }
    },
    "playback_profile": {
      "type": "object",
      "properties": {
        "loop": {
          "type": "boolean"
        },
        "speed": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "style": {
          "type": "string"
        },
        "audio_track_id": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "synthetic": {
      "type": "boolean"
    },
    "synthetic_flag": {
      "type": "boolean"
    },
    "anonymization_profile": {
      "type": "string"
    },
    "anonymization_profile_tag": {
      "type": "string"
    },
    "_synthetic_hash": {
      "type": "string",
      "minLength": 8
    },
    "media_track_id": {
      "type": "string",
      "minLength": 1
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["version", "sessionId", "timestamp", "data"],
  "additionalProperties": false
}
