{
  "defaultMood": "ambient",
  "defaultDuration": 2400,
  "interval": [9000, 14000],
  "pacePresets": {
    "fast": [5000, 8000],
    "slow": [15000, 22000],
    "rare": [26000, 42000]
  },
  "zones": {
    "full": { "shape": "rect", "x": 0, "y": 0, "w": 1, "h": 1 },
    "center": { "shape": "circle", "x": 0.5, "y": 0.45, "r": 0.28 },
    "topLeft": { "shape": "rect", "x": 0.05, "y": 0.05, "w": 0.35, "h": 0.35 },
    "bottom": { "shape": "rect", "x": 0.15, "y": 0.65, "w": 0.7, "h": 0.3 }
  },
  "moods": {
    "ambient": {
      "pace": "slow",
      "zones": ["full", "bottom"],
      "effects": [
        { "type": "css", "effect": "fx-softPulse", "duration": 3000, "intensity": "low", "tag": "haze" },
        {
          "type": "canvas",
          "effect": "hueshift",
          "zone": { "shape": "rect", "x": 0.2, "y": 0.6, "w": 0.3, "h": 0.2 },
          "duration": 4000,
          "intensity": "low",
          "tag": "ambient"
        }
      ]
    },
    "rare": {
      "pace": "rare",
      "zones": [
        { "shape": "circle", "x": 0.5, "y": 0.4, "r": 0.2 }
      ],
      "effects": [
        {
          "type": "canvas",
          "effect": "ripple",
          "zone": { "shape": "circle", "x": 0.5, "y": 0.4, "r": 0.2 },
          "duration": 4000,
          "intensity": "medium",
          "tag": "glide"
        }
      ]
    },
    "glide": {
      "pace": "fast",
      "zones": [
        "center",
        { "shape": "rect", "x": 0.1, "y": 0.2, "w": 0.3, "h": 0.4 }
      ],
      "effects": [
        {
          "type": "canvas",
          "effect": "melt",
          "zone": { "shape": "rect", "x": 0.1, "y": 0.2, "w": 0.3, "h": 0.4 },
          "duration": 5000,
          "intensity": "high",
          "tag": "vapor"
        }
      ]
    },
    "dreamcore": {
      "pace": "fast",
      "zones": ["center", "full"],
      "effects": [
        { "type": "css", "effect": "fx-softPulse", "duration": 2200, "intensity": "medium", "tag": "haze" },
        {
          "type": "canvas",
          "effect": "wave",
          "zone": { "shape": "circle", "x": 0.4, "y": 0.6, "r": 0.3 },
          "duration": 6000,
          "intensity": "high",
          "tag": "rare"
        },
        { "type": "canvas", "effect": "bloom", "duration": 5200, "intensity": "medium", "tag": "ambient" }
      ]
    }
  }
}
